function _drupalx_create_hero(array $hero_info) {

  $block = BlockContent::create([
    'type' => 'hero',
    'info' => 'Hero: ' . strip_tags($hero_info['heading']),
    'field_media' => $hero_info['media'],
    'field_heading' => [
